@model IEnumerable<Proyecto_Final_Web.Models.Factura>

@{
    ViewData["Title"] = "Index";
}



<div class="hero-section">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-10 col-md-12">
                <div class="form-container p-4 p-md-5">
                    <div class="form-header">
                        <h1><i class="fas fa-file-invoice-dollar me-3"></i>Lista de Facturas</h1>
                        <p>Administra y visualiza tus facturas emitidas</p>
                    </div>

                    <div class="d-flex justify-content-end mb-4">
                        @if (User.IsInRole("Empleado") || User.IsInRole("Administrador") || User.IsInRole("Gerente"))
                        {
                            <a asp-action="Create" class="btn btn-primary">
                                <i class="fas fa-plus-circle me-2"></i>
                                Crear Nueva Factura
                            </a>
                        }
                    </div>

                    <div class="table-responsive">
                        @if (Model != null && Model.Any())
                        {
                            <table class="table">
                                <thead>
                                    <tr>
                                        <th class="th-icon-total">
                                            @Html.DisplayNameFor(model => model.Total)
                                        </th>
                                        <th class="th-icon-fecha-emision">
                                            @Html.DisplayNameFor(model => model.FechaEmision)
                                        </th>
                                        <th class="th-icon-cliente">
                                            @Html.DisplayNameFor(model => model.IdClienteNavigation)
                                        </th>
                                        <th class="th-icon-estado-factura">
                                            @Html.DisplayNameFor(model => model.IdEstadoFacturaNavigation)
                                        </th>
                                        <th class="th-icon-metodo-pago">
                                            @Html.DisplayNameFor(model => model.IdMetodoPagoNavigation)
                                        </th>
                                        <th class="th-icon-reserva">
                                            @Html.DisplayNameFor(model => model.IdReservaNavigation)
                                        </th>
                                        <th>Acciones</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td data-label="@Html.DisplayNameFor(model => model.Total)">
                                                @Html.DisplayFor(modelItem => item.Total)
                                            </td>
                                            <td data-label="@Html.DisplayNameFor(model => model.FechaEmision)">
                                                @Html.DisplayFor(modelItem => item.FechaEmision)
                                            </td>
                                            <td data-label="@Html.DisplayNameFor(model => model.IdClienteNavigation)">
                                                @Html.DisplayFor(modelItem => item.IdClienteNavigation.NombreCompleto)
                                            </td>
                                            <td data-label="@Html.DisplayNameFor(model => model.IdEstadoFacturaNavigation)">
                                                @Html.DisplayFor(modelItem => item.IdEstadoFacturaNavigation.Nombre)
                                            </td>
                                            <td data-label="@Html.DisplayNameFor(model => model.IdMetodoPagoNavigation)">
                                                @Html.DisplayFor(modelItem => item.IdMetodoPagoNavigation.Nombre)
                                            </td>
                                            <td data-label="@Html.DisplayNameFor(model => model.IdReservaNavigation)">
                                                @Html.DisplayFor(modelItem => item.IdReservaNavigation.IdReserva)
                                            </td>
                                            <td data-label="Acciones">
                                                <div class="d-flex justify-content-center justify-content-md-start">
                                                    @if (User.IsInRole("Empleado") || User.IsInRole("Administrador") || User.IsInRole("Gerente"))
                                                    {
                                                        <a asp-action="Edit" asp-route-id="@item.IdFactura" class="btn-action-edit">
                                                            <i class="fas fa-edit"></i> Editar
                                                        </a>
                                                        <a asp-action="Delete" asp-route-id="@item.IdFactura" class="btn-action-delete">
                                                            <i class="fas fa-trash-alt"></i> Eliminar
                                                        </a>
                                                    }
                                                    <a asp-action="Details" asp-route-id="@item.IdFactura" class="btn-action-details">
                                                        <i class="fas fa-info-circle"></i> Detalles
                                                    </a>
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        }
                        else
                        {
                            <div class="alert alert-info text-center" role="alert">
                                <h4 class="alert-heading">¡No hay facturas registradas!</h4>
                                <p>Actualmente no hay facturas en el sistema que cumplan con los criterios de visualización.</p>
                                <hr>
                                <p class="mb-0">Puedes crear una nueva factura si tienes los permisos adecuados.</p>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
