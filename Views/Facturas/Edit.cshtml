@model Proyecto_Final_Web.Models.Factura

@{
    ViewData["Title"] = "Edit";
}



<div class="edit-section">
    <div class="container-fluid">
        <div class="row justify-content-center">
            <div class="col-12">
                <div class="form-container">
                    <div class="form-header">
                        <div class="icon-container">
                            <div class="main-icon">
                                <i class="fas fa-file-invoice"></i> <!-- Icono para facturas -->
                            </div>
                        </div>
                        <h1><i class="fas fa-edit me-3"></i>Editar Factura</h1>
                        <h4>Modifica los detalles de la factura seleccionada</h4>
                    </div>

                    <form asp-action="Edit">
                        <div asp-validation-summary="ModelOnly" class="validation-summary text-danger">
                            <strong><i class="fas fa-exclamation-triangle"></i>Por favor corrige los siguientes errores:</strong>
                        </div>
                        <input type="hidden" asp-for="IdFactura" />
                        <div class="form-content">
                            <div class="form-grid">
                                <div class="form-group">
                                    <label asp-for="IdReserva" class="control-label">Reserva</label>
                                    <select asp-for="IdReserva" class="form-control" asp-items="ViewBag.IdReserva">
                                        <option value="">-- Seleccione Reserva --</option>
                                    </select>
                                    <span asp-validation-for="IdReserva" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="IdCliente" class="control-label">Cliente</label>
                                    <select asp-for="IdCliente" class="form-control" asp-items="ViewBag.IdCliente">
                                        <option value="">-- Seleccione Cliente --</option>
                                    </select>
                                    <span asp-validation-for="IdCliente" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="IdEstadoFactura" class="control-label">Estado de Factura</label>
                                    <select asp-for="IdEstadoFactura" class="form-control" asp-items="ViewBag.IdEstadoFactura">
                                        <option value="">-- Seleccione Estado --</option>
                                    </select>
                                    <span asp-validation-for="IdEstadoFactura" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="IdMetodoPago" class="control-label">Método de Pago</label>
                                    <select asp-for="IdMetodoPago" class="form-control" asp-items="ViewBag.IdMetodoPago">
                                        <option value="">-- Seleccione Método --</option>
                                    </select>
                                    <span asp-validation-for="IdMetodoPago" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="Total" class="control-label">Total</label>
                                    <input asp-for="Total" class="form-control" type="number" step="0.01" min="0" placeholder="0.00" />
                                    <span asp-validation-for="Total" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="FechaEmision" class="control-label">Fecha de Emisión</label>
                                    <input asp-for="FechaEmision" class="form-control" type="datetime-local"
                                                       value="@Model.FechaEmision.ToString("yyyy-MM-ddTHH:mm")" />
                                    <span asp-validation-for="FechaEmision" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="action-buttons">
                            <input type="submit" value="Guardar Cambios" class="btn-primary" />
                            <a asp-action="Index" class="back-link">
                                Volver a la Lista
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
