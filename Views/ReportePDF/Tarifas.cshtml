@model IEnumerable<Proyecto_Final_Web.Models.Tarifa>
@{
    ViewData["Title"] = "Listado de Tarifas";
    Layout = null; // No usar layout para el PDF
}


<div class="table-responsive">
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.IdTarifa)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.IdCanchaNavigation.Nombre)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.DiaSemana)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.HoraInicio)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.HoraFin)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Valor)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Descripcion)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Activa)
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.IdTarifa)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.IdCanchaNavigation.Nombre)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.DiaSemana)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.HoraInicio)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.HoraFin)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Valor)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Descripcion)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Activa)
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
