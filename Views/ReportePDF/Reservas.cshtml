@model IEnumerable<Proyecto_Final_Web.Models.Reserva>
@{
    ViewData["Title"] = "Listado de Reservas";
    Layout = null; // No usar layout para el PDF
}


<div class="table-responsive">
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.IdReserva)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.IdClienteNavigation.NombreCompleto)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.IdCanchaNavigation.Nombre)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.FechaHoraInicio)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.FechaHoraFin)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.IdEstadoReservaNavigation.Nombre)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Valor)
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.IdReserva)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.IdClienteNavigation.NombreCompleto)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.IdCanchaNavigation.Nombre)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.FechaHoraInicio)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.FechaHoraFin)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.IdEstadoReservaNavigation.Nombre)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Valor)
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>