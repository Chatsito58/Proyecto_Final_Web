@model Proyecto_Final_Web.Models.EstadosReserva

@{
    ViewData["Title"] = "Edit";
}

<head>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" xintegrity="sha512-1ycn6IcaQQ40NZMfzGtpNKPzLfw5+TYxLz7J6v9h+L5m4w/uLg0g9b4O1J0zK6P5tC2Lz/j0+R8dI6c0eQ==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>

<style>
    /* Colores y gradientes de la guía de diseño original */
    /* Verde Marino - Color principal: #2E8B57 */
    /* Azul Acero - Color secundario: #4682B4 */
    /* Verde Agua - Color de acento: #20B2AA */
    /* Verde Bosque - Para hovers y estados activos: #228B22 */

    /* Colores de Soporte: */
    /* Textos principales: #2c5f2d - Verde oscuro */
    /* Gris oscuro para valores: #333 */
    /* Gris medio para textos secundarios: #666 */
    /* Rojo para errores y validaciones: #dc3545 */

    /* Animación de Gradiente (Barra Superior Animada) */
    @@keyframes gradient {
        0% {
            background-position: 0% 50%;
        }

        50% {
            background-position: 100% 50%;
        }

        100% {
            background-position: 0% 50%;
        }
    }

    /* Animación Flotante (Partículas de Fondo) */
    @@keyframes float {
        0%, 100% {
            transform: translateY(0px);
        }

        50% {
            transform: translateY(-10px);
        }
    }

    /* Animación Bounce (Iconos principales) */
    @@keyframes bounce {
        0%, 20%, 50%, 80%, 100% {
            transform: translateY(0);
        }

        40% {
            transform: translateY(-10px);
        }

        60% {
            transform: translateY(-5px);
        }
    }

    body {
        /* El fondo del body ahora se maneja en el layout principal */
        font-family: 'Inter', -apple-system, BlinkMacSystemFont, sans-serif;
        color: #2c5f2d; /* Verde oscuro para textos principales */
        margin: 0;
        padding: 0; /* Padding del body manejado por el layout */
    }

    .edit-section {
        background: transparent;
        padding: 0;
        position: relative;
        overflow: visible;
        border-radius: 0;
        margin: 0;
    }

    .form-container { /* Usado como contenedor principal para el contenido de la página */
        background: rgba(255, 255, 255, 0.95);
        border-radius: 20px;
        box-shadow: 0 20px 40px rgba(46, 139, 87, 0.15);
        backdrop-filter: blur(10px);
        border: 1px solid rgba(255, 255, 255, 0.2);
        position: relative;
        overflow: hidden;
        max-width: 900px; /* Ancho ajustado para formularios */
        margin: 0 auto;
    }

        .form-container::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            height: 4px;
            background: linear-gradient(90deg, #2E8B57, #4682B4, #20B2AA, #228B22);
            background-size: 400% 400%;
            animation: gradient 3s ease infinite;
        }

    .form-header {
        background: linear-gradient(135deg, #2E8B57 0%, #4682B4 100%);
        color: white;
        padding: 30px;
        margin: -30px -30px 30px -30px;
        border-radius: 20px 20px 0 0;
        text-align: center;
        position: relative;
        overflow: hidden;
    }

        .form-header h1 {
            margin: 0;
            font-size: 2.5rem;
            font-weight: 700;
            text-shadow: 2px 2px 4px rgba(0,0,0,0.3);
            position: relative;
            z-index: 1;
        }

        .form-header h4 {
            margin: 10px 0 0 0;
            opacity: 0.9;
            font-size: 1.1rem;
            font-weight: 400;
            position: relative;
            z-index: 1;
        }

    .icon-container {
        margin: 20px 0;
        position: relative;
        z-index: 1;
    }

    .main-icon {
        width: 50px;
        height: 50px;
        border-radius: 50%;
        background: rgba(255, 255, 255, 0.2);
        display: inline-flex;
        align-items: center;
        justify-content: center;
        font-size: 1.5rem;
        animation: bounce 2s infinite;
        color: white;
    }

    .form-content {
        padding: 30px;
    }

    .form-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(350px, 1fr));
        gap: 25px;
        margin-bottom: 30px;
    }

    .form-group {
        background: rgba(255, 255, 255, 0.9);
        border: 2px solid #e1f5e1;
        border-radius: 12px;
        padding: 25px;
        transition: all 0.3s ease;
        position: relative;
        overflow: hidden;
        box-shadow: 0 5px 15px rgba(0, 0, 0, 0.05);
    }

        .form-group::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            width: 4px;
            height: 100%;
            background: linear-gradient(180deg, #2E8B57, #4682B4);
            opacity: 0;
            transition: opacity 0.3s ease;
        }

        .form-group:hover::before {
            opacity: 1;
        }

        .form-group:hover {
            transform: translateY(-2px);
            box-shadow: 0 10px 25px rgba(46, 139, 87, 0.15);
            border-color: rgba(46, 139, 87, 0.3);
        }

        .form-group:focus-within {
            transform: translateY(-3px);
            box-shadow: 0 10px 25px rgba(46, 139, 87, 0.2);
            border-color: rgba(46, 139, 87, 0.5);
        }

            .form-group:focus-within::before {
                opacity: 1;
            }

    .control-label {
        font-weight: 600;
        color: #2c5f2d;
        font-size: 1rem;
        margin-bottom: 8px;
        display: flex;
        align-items: center;
        gap: 8px;
    }

        .control-label::before {
            content: '';
            font-family: 'Font Awesome 5 Free';
            font-weight: 900;
            color: #2E8B57;
            font-size: 1.1rem;
            margin-right: 0;
        }

        /* Iconos específicos para los labels */
        .control-label[for*="Nombre"]::before {
            content: '\f02b';
        }
    /* fa-tag */


    .form-control, .form-select {
        border: 2px solid #e1f5e1;
        border-radius: 12px;
        padding: 12px 16px;
        font-size: 1rem;
        transition: all 0.3s ease;
        background: rgba(255, 255, 255, 0.9);
        width: 100%;
        color: #333;
    }

        .form-control:focus, .form-select:focus {
            border-color: #2E8B57;
            box-shadow: 0 0 0 0.2rem rgba(46, 139, 87, 0.25);
            background: white;
            transform: translateY(-2px);
            outline: none;
        }

        .form-control:hover, .form-select:hover {
            border-color: rgba(46, 139, 87, 0.5);
            background: rgba(255, 255, 255, 1);
        }

        .form-control[readonly] {
            background: rgba(248, 250, 252, 0.8);
            color: #666;
            cursor: not-allowed;
        }

    .text-danger {
        color: #dc3545;
        font-size: 0.875rem;
        margin-top: 5px;
        font-weight: 500;
        display: block;
    }

        .text-danger::before {
            content: '\f071';
            font-family: 'Font Awesome 5 Free';
            font-weight: 900;
            font-size: 0.8rem;
            margin-right: 5px;
        }

    .validation-summary {
        background: rgba(220, 53, 69, 0.1);
        backdrop-filter: blur(10px);
        border: 2px solid rgba(220, 53, 69, 0.2);
        border-radius: 16px;
        padding: 20px;
        margin: 0 30px 25px 30px;
        position: relative;
        overflow: hidden;
    }

        .validation-summary::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            width: 4px;
            height: 100%;
            background: #dc3545;
        }

        .validation-summary strong {
            color: #dc3545;
            font-weight: 600;
            display: flex;
            align-items: center;
            gap: 8px;
            margin-bottom: 10px;
        }

        .validation-summary ul {
            margin: 0;
            padding-left: 20px;
        }

        .validation-summary li {
            color: #dc3545;
            font-weight: 500;
            margin: 5px 0;
        }

    .action-buttons {
        display: flex;
        gap: 20px;
        justify-content: center;
        flex-wrap: wrap;
        margin-top: 30px;
        padding: 30px;
        border-top: 1px solid rgba(255, 255, 255, 0.2);
        background: rgba(255, 255, 255, 0.95);
        backdrop-filter: blur(10px);
    }

    .btn-primary {
        background: linear-gradient(135deg, #2E8B57 0%, #20B2AA 100%);
        border: none;
        border-radius: 12px;
        padding: 15px 40px;
        font-size: 1.1rem;
        font-weight: 600;
        text-transform: uppercase;
        letter-spacing: 1px;
        transition: all 0.3s ease;
        position: relative;
        overflow: hidden;
        color: white;
        cursor: pointer;
        min-width: 200px;
    }

        .btn-primary::before {
            content: '';
            position: absolute;
            top: 0;
            left: -100%;
            width: 100%;
            height: 100%;
            background: linear-gradient(90deg, transparent, rgba(255,255,255,0.2), transparent);
            transition: left 0.5s;
        }

        .btn-primary:hover::before {
            left: 100%;
        }

        .btn-primary:hover {
            background: linear-gradient(135deg, #228B22 0%, #4682B4 100%);
            transform: translateY(-3px);
            box-shadow: 0 10px 25px rgba(46, 139, 87, 0.4);
            color: white;
        }

        .btn-primary:focus {
            box-shadow: 0 0 0 0.2rem rgba(46, 139, 87, 0.25);
            outline: none;
        }

    .back-link {
        display: inline-flex;
        align-items: center;
        justify-content: center;
        gap: 10px;
        color: #4682B4;
        text-decoration: none;
        font-weight: 600;
        padding: 12px 30px;
        border: 2px solid #4682B4;
        border-radius: 12px;
        transition: all 0.3s ease;
        background: transparent;
        min-width: 200px;
        text-transform: none;
        letter-spacing: normal;
        font-size: 1.1rem;
    }

        .back-link:hover {
            background: #4682B4;
            color: white;
            transform: translateY(-2px);
            text-decoration: none;
            box-shadow: 0 5px 15px rgba(70, 130, 180, 0.3);
        }

        .back-link::before {
            content: '\f060'; /* fa-arrow-left */
            font-family: 'Font Awesome 5 Free';
            font-weight: 900;
            transition: transform 0.3s ease;
            margin-right: 5px;
        }

        .back-link:hover::before {
            transform: translateX(-3px);
        }

    /* Responsive Design */
    @@media (max-width: 768px) {
        .form-container {
            margin: 20px;
            border-radius: 15px;
            padding: 20px !important;
        }

        .form-header h1 {
            font-size: 2rem;
        }

        .form-content {
            padding: 20px;
        }

        .form-grid {
            grid-template-columns: 1fr;
            gap: 20px;
        }

        .action-buttons {
            flex-direction: column;
            align-items: center;
            padding: 20px;
        }

        .btn-primary, .back-link {
            width: 100%;
            max-width: 300px;
        }

        .validation-summary {
            margin: 0 20px 20px 20px;
        }
    }

    @@media (max-width: 480px) {
        .form-header h1 {
            font-size: 1.8rem;
        }

        .main-icon {
            width: 40px;
            height: 40px;
            font-size: 1.2rem;
        }
    }

    /* Animaciones de carga */
    .form-container {
        animation: slideIn 0.6s cubic-bezier(0.4, 0, 0.2, 1);
    }

    @@keyframes slideIn {
        0% {
            opacity: 0;
            transform: translateY(30px);
        }

        100% {
            opacity: 1;
            transform: translateY(0);
        }
    }

    .form-group {
        animation: fadeInUp 0.6s cubic-bezier(0.4, 0, 0.2, 1) forwards;
        opacity: 0;
    }

        .form-group:nth-child(1) {
            animation-delay: 0.1s;
        }


    @@keyframes fadeInUp {
        0% {
            opacity: 0;
            transform: translateY(20px);
        }

        100% {
            opacity: 1;
            transform: translateY(0);
        }
    }
</style>

<div class="edit-section">
    <div class="container-fluid">
        <div class="row justify-content-center">
            <div class="col-12">
                <div class="form-container">
                    <div class="form-header">
                        <div class="icon-container">
                            <div class="main-icon">
                                <i class="fas fa-edit"></i> <!-- Icono para editar -->
                            </div>
                        </div>
                        <h1><i class="fas fa-clipboard-check me-3"></i>Editar Estado de Reserva</h1>
                        <h4>Modifica el nombre del estado de reserva</h4>
                    </div>

                    <form asp-action="Edit">
                        <div asp-validation-summary="ModelOnly" class="validation-summary text-danger">
                            <strong><i class="fas fa-exclamation-triangle"></i>Por favor corrige los siguientes errores:</strong>
                        </div>
                        <input type="hidden" asp-for="IdEstadoReserva" />
                        <div class="form-content">
                            <div class="form-grid">
                                <div class="form-group">
                                    <label asp-for="Nombre" class="control-label">Nombre del Estado</label>
                                    <input asp-for="Nombre" class="form-control" placeholder="Ej: Pendiente, Confirmada, Cancelada" />
                                    <span asp-validation-for="Nombre" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="d-flex justify-content-between align-items-center mt-4">
                            <a asp-action="Index" class="btn btn-outline-secondary back-link">
                                <i class="fas fa-arrow-left me-2"></i>
                                Volver al Listado
                            </a>

                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-save me-2"></i>
                                Guardar Cambios
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
