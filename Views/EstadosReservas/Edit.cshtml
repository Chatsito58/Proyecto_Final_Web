@model Proyecto_Final_Web.Models.EstadosReserva

@{
    ViewData["Title"] = "Edit";
}



<div class="edit-section">
    <div class="container-fluid">
        <div class="row justify-content-center">
            <div class="col-12">
                <div class="form-container">
                    <div class="form-header">
                        <div class="icon-container">
                            <div class="main-icon">
                                <i class="fas fa-edit"></i> <!-- Icono para editar -->
                            </div>
                        </div>
                        <h1><i class="fas fa-clipboard-check me-3"></i>Editar Estado de Reserva</h1>
                        <h4>Modifica el nombre del estado de reserva</h4>
                    </div>

                    <form asp-action="Edit">
                        <div asp-validation-summary="ModelOnly" class="validation-summary text-danger">
                            <strong><i class="fas fa-exclamation-triangle"></i>Por favor corrige los siguientes errores:</strong>
                        </div>
                        <input type="hidden" asp-for="IdEstadoReserva" />
                        <div class="form-content">
                            <div class="form-grid">
                                <div class="form-group">
                                    <label asp-for="Nombre" class="control-label">Nombre del Estado</label>
                                    <input asp-for="Nombre" class="form-control" placeholder="Ej: Pendiente, Confirmada, Cancelada" />
                                    <span asp-validation-for="Nombre" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="d-flex justify-content-between align-items-center mt-4">
                            <a asp-action="Index" class="btn btn-outline-secondary back-link">
                                <i class="fas fa-arrow-left me-2"></i>
                                Volver al Listado
                            </a>

                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-save me-2"></i>
                                Guardar Cambios
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
