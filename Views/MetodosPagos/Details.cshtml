@model Proyecto_Final_Web.Models.MetodosPago

@{
    ViewData["Title"] = "Details";
}



<div class="details-section">
    <div class="container-fluid">
        <div class="row justify-content-center">
            <div class="col-12">
                <div class="form-container">
                    <div class="form-header">
                        <div class="icon-container">
                            <div class="main-icon">
                                <i class="fas fa-info-circle"></i> <!-- Icono para detalles -->
                            </div>
                        </div>
                        <h1><i class="fas fa-cash-register me-3"></i>Detalles del Método de Pago</h1>
                        <h4>Información detallada del método de pago seleccionado</h4>
                    </div>

                    <div class="details-content">
                        <h4>Detalles del Método de Pago</h4>
                        <hr />
                        <div class="row">
                            <div class="col-md-6">
                                <div class="details-group">
                                    <dt data-label="Nombre">
                                        @Html.DisplayNameFor(model => model.Nombre)
                                    </dt>
                                    <dd>
                                        @Html.DisplayFor(model => model.Nombre)
                                    </dd>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="action-buttons">
                        <a asp-action="Edit" asp-route-id="@Model?.IdMetodoPago" class="btn-action-edit">
                            <i class="fas fa-edit"></i> Editar
                        </a>
                        <a asp-action="Index" class="back-link">
                            <i class="fas fa-arrow-left"></i> Volver a la Lista
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
