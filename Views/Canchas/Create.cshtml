@model Proyecto_Final_Web.Models.Cancha

@{
    ViewData["Title"] = "Create";
}



<div class="create-section">
    <div class="container-fluid">
        <div class="row justify-content-center">
            <div class="col-12">
                <div class="form-container">
                    <div class="form-header">
                        <div class="icon-container">
                            <div class="main-icon">
                                <i class="fas fa-plus-circle"></i> <!-- Icono para crear -->
                            </div>
                        </div>
                        <h1><i class="fas fa-futbol me-3"></i>Crear Cancha</h1>
                        <h4>Registra una nueva cancha deportiva en el sistema</h4>
                    </div>

                    <form asp-action="Create">
                        <div asp-validation-summary="ModelOnly" class="validation-summary text-danger">
                            <strong><i class="fas fa-exclamation-triangle"></i>Por favor corrige los siguientes errores:</strong>
                        </div>
                        <div class="form-content">
                            <div class="form-grid">
                                <div class="form-group">
                                    <label asp-for="Nombre" class="control-label">Nombre</label>
                                    <input asp-for="Nombre" class="form-control" placeholder="Nombre de la cancha" />
                                    <span asp-validation-for="Nombre" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="TipoCancha" class="control-label">Tipo de Cancha</label>
                                    <input asp-for="TipoCancha" class="form-control" placeholder="Ej: Fútbol, Baloncesto, Tenis" />
                                    <span asp-validation-for="TipoCancha" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="Ubicacion" class="control-label">Ubicación</label>
                                    <input asp-for="Ubicacion" class="form-control" placeholder="Dirección o referencia de ubicación" />
                                    <span asp-validation-for="Ubicacion" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="Descripcion" class="control-label">Descripción</label>
                                    <input asp-for="Descripcion" class="form-control" placeholder="Detalles adicionales de la cancha" />
                                    <span asp-validation-for="Descripcion" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="action-buttons">
                            <input type="submit" value="Crear Cancha" class="btn-primary" />
                            <a asp-action="Index" class="back-link">
                                Volver al Listado
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
