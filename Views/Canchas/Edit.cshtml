@model Proyecto_Final_Web.Models.Cancha

@{
    ViewData["Title"] = "Edit";
}



<div class="edit-section">
    <div class="container-fluid">
        <div class="row justify-content-center">
            <div class="col-12">
                <div class="form-container">
                    <div class="form-header">
                        <div class="icon-container">
                            <div class="main-icon">
                                <i class="fas fa-edit"></i> <!-- Icono para editar -->
                            </div>
                        </div>
                        <h1><i class="fas fa-futbol me-3"></i>Editar Cancha</h1>
                        <h4>Modifica los detalles de la cancha seleccionada</h4>
                    </div>

                    <form asp-action="Edit">
                        <div asp-validation-summary="ModelOnly" class="validation-summary text-danger">
                            <strong><i class="fas fa-exclamation-triangle"></i>Por favor corrige los siguientes errores:</strong>
                        </div>
                        <input type="hidden" asp-for="IdCancha" />
                        <div class="form-content">
                            <div class="form-grid">
                                <div class="form-group">
                                    <label asp-for="Nombre" class="control-label">Nombre</label>
                                    <input asp-for="Nombre" class="form-control" placeholder="Nombre de la cancha" />
                                    <span asp-validation-for="Nombre" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="TipoCancha" class="control-label">Tipo de Cancha</label>
                                    <input asp-for="TipoCancha" class="form-control" placeholder="Ej: Fútbol, Baloncesto, Tenis" />
                                    <span asp-validation-for="TipoCancha" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="Ubicacion" class="control-label">Ubicación</label>
                                    <input asp-for="Ubicacion" class="form-control" placeholder="Dirección o referencia de ubicación" />
                                    <span asp-validation-for="Ubicacion" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="Descripcion" class="control-label">Descripción</label>
                                    <input asp-for="Descripcion" class="form-control" placeholder="Detalles adicionales de la cancha" />
                                    <span asp-validation-for="Descripcion" class="text-danger"></span>
                                </div>
                                <div class="form-group form-check">
                                    <label class="form-check-label">
                                        <input class="form-check-input" asp-for="Activa" /> @Html.DisplayNameFor(model => model.Activa)
                                    </label>
                                </div>
                                <div class="form-group">
                                    <label asp-for="FechaCreacion" class="control-label">Fecha de Creación</label>
                                    <input asp-for="FechaCreacion" class="form-control" readonly />
                                    <span asp-validation-for="FechaCreacion" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="FechaActualizacion" class="control-label">Fecha de Actualización</label>
                                    <input asp-for="FechaActualizacion" class="form-control" />
                                    <span asp-validation-for="FechaActualizacion" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="action-buttons">
                            <input type="submit" value="Guardar Cambios" class="btn-primary" />
                            <a asp-action="Index" class="back-link">
                                Volver a la Lista
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
