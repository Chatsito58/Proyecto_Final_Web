@model Proyecto_Final_Web.Models.Role

@{
    ViewData["Title"] = "Delete";
}



<div class="delete-section">
    <div class="container-fluid">
        <div class="row justify-content-center">
            <div class="col-12">
                <div class="form-container">
                    <div class="form-header">
                        <div class="icon-container">
                            <div class="main-icon">
                                <i class="fas fa-trash-alt"></i>
                            </div>
                        </div>
                        <h1><i class="fas fa-exclamation-triangle me-3"></i>Eliminar Rol</h1>
                        <h4>Confirma la eliminación de este rol permanentemente</h4>
                    </div>

                    <h3 class="confirmation-message">
                        <i class="fas fa-question-circle"></i> ¿Estás seguro de que quieres eliminar esto?
                    </h3>

                    <div class="details-content">
                        <h4>Detalles del Rol</h4>
                        <hr />
                        <div class="row">
                            <div class="col-md-6">
                                <div class="details-group">
                                    <dt data-label="Nombre">
                                        @Html.DisplayNameFor(model => model.Nombre)
                                    </dt>
                                    <dd>
                                        @Html.DisplayFor(model => model.Nombre)
                                    </dd>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="details-group">
                                    <dt data-label="Descripcion">
                                        @Html.DisplayNameFor(model => model.Descripcion)
                                    </dt>
                                    <dd>
                                        @Html.DisplayFor(model => model.Descripcion)
                                    </dd>
                                </div>
                            </div>
                        </div>
                    </div>

                    <form asp-action="Delete">
                        <input type="hidden" asp-for="IdRol" />
                        <div class="action-buttons">
                            <input type="submit" value="Eliminar" class="btn-delete" />
                            <a asp-action="Index" class="back-link">
                                Volver a la Lista
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
