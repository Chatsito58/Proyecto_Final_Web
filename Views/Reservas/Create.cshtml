@model Proyecto_Final_Web.Models.Reserva
@{
    ViewData["Title"] = "Create";
}

<style>
    .hero-section {
        background: linear-gradient(135deg, #2E8B57 0%, #4682B4 50%, #20B2AA 100%);
        padding: 40px 0;
        position: relative;
        overflow: hidden;
        border-radius: 15px;
        margin-bottom: 30px;
    }

        .hero-section::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            background: url('data:image/svg+xml,<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 100 100"><circle cx="20" cy="20" r="2" fill="white" opacity="0.1"><animate attributeName="opacity" values="0.1;0.3;0.1" dur="3s" repeatCount="indefinite"/></circle><circle cx="80" cy="40" r="1.5" fill="white" opacity="0.2"><animate attributeName="opacity" values="0.2;0.4;0.2" dur="4s" repeatCount="indefinite"/></circle><circle cx="60" cy="80" r="2.5" fill="white" opacity="0.15"><animate attributeName="opacity" values="0.15;0.35;0.15" dur="5s" repeatCount="indefinite"/></circle></svg>') repeat;
            animation: float 20s ease-in-out infinite;
        }

    @@keyframes float {
        0%, 100% {
            transform: translateY(0px);
        }

        50% {
            transform: translateY(-10px);
        }
    }

    .form-container {
        background: rgba(255, 255, 255, 0.95);
        border-radius: 20px;
        box-shadow: 0 20px 40px rgba(46, 139, 87, 0.15);
        backdrop-filter: blur(10px);
        border: 1px solid rgba(255, 255, 255, 0.2);
        position: relative;
        overflow: hidden;
    }

        .form-container::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            height: 4px;
            background: linear-gradient(90deg, #2E8B57, #4682B4, #20B2AA, #228B22);
            background-size: 400% 400%;
            animation: gradient 3s ease infinite;
        }

    @@keyframes gradient {
        0% {
            background-position: 0% 50%;
        }

        50% {
            background-position: 100% 50%;
        }

        100% {
            background-position: 0% 50%;
        }
    }

    .form-header {
        background: linear-gradient(135deg, #2E8B57 0%, #4682B4 100%);
        color: white;
        padding: 30px;
        margin: -30px -30px 30px -30px;
        border-radius: 20px 20px 0 0;
        text-align: center;
    }

        .form-header h1 {
            margin: 0;
            font-size: 2.5rem;
            font-weight: 700;
            text-shadow: 2px 2px 4px rgba(0,0,0,0.3);
        }

        .form-header p {
            margin: 10px 0 0 0;
            opacity: 0.9;
            font-size: 1.1rem;
        }

    .sport-icons {
        display: flex;
        justify-content: center;
        gap: 20px;
        margin-top: 20px;
    }

    .sport-icon {
        width: 50px;
        height: 50px;
        background: rgba(255, 255, 255, 0.2);
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 1.5rem;
        transition: all 0.3s ease;
        animation: bounce 2s infinite;
    }

        .sport-icon:nth-child(2) {
            animation-delay: 0.2s;
        }

        .sport-icon:nth-child(3) {
            animation-delay: 0.4s;
        }

        .sport-icon:nth-child(4) {
            animation-delay: 0.6s;
        }

    @@keyframes bounce {
        0%, 20%, 50%, 80%, 100% {
            transform: translateY(0);
        }

        40% {
            transform: translateY(-10px);
        }

        60% {
            transform: translateY(-5px);
        }
    }

    .form-group {
        margin-bottom: 25px;
        position: relative;
    }

    .form-label {
        font-weight: 600;
        color: #2c5f2d;
        margin-bottom: 8px;
        display: flex;
        align-items: center;
        gap: 8px;
        font-size: 1rem;
    }

    .form-control, .form-select {
        border: 2px solid #e1f5e1;
        border-radius: 12px;
        padding: 12px 16px;
        font-size: 1rem;
        transition: all 0.3s ease;
        background: rgba(255, 255, 255, 0.9);
    }

        .form-control:focus, .form-select:focus {
            border-color: #2E8B57;
            box-shadow: 0 0 0 0.2rem rgba(46, 139, 87, 0.25);
            background: white;
            transform: translateY(-2px);
        }

    .input-group-text {
        background: linear-gradient(135deg, #2E8B57, #4682B4);
        color: white;
        border: none;
        border-radius: 12px 0 0 12px;
    }

    .btn-primary {
        background: linear-gradient(135deg, #2E8B57 0%, #20B2AA 100%);
        border: none;
        border-radius: 12px;
        padding: 15px 40px;
        font-size: 1.1rem;
        font-weight: 600;
        text-transform: uppercase;
        letter-spacing: 1px;
        transition: all 0.3s ease;
        position: relative;
        overflow: hidden;
    }

        .btn-primary:hover {
            background: linear-gradient(135deg, #228B22 0%, #4682B4 100%);
            transform: translateY(-3px);
            box-shadow: 0 10px 25px rgba(46, 139, 87, 0.4);
        }

        .btn-primary::before {
            content: '';
            position: absolute;
            top: 0;
            left: -100%;
            width: 100%;
            height: 100%;
            background: linear-gradient(90deg, transparent, rgba(255,255,255,0.2), transparent);
            transition: left 0.5s;
        }

        .btn-primary:hover::before {
            left: 100%;
        }

    .btn-outline-secondary {
        border: 2px solid #4682B4;
        color: #4682B4;
        border-radius: 12px;
        padding: 12px 30px;
        font-weight: 600;
        text-decoration: none;
        transition: all 0.3s ease;
    }

        .btn-outline-secondary:hover {
            background: #4682B4;
            color: white;
            transform: translateY(-2px);
        }

    .text-danger {
        font-size: 0.875rem;
        margin-top: 5px;
        display: block;
    }

    .text-primary {
        color: #2E8B57 !important;
    }

    .text-success {
        color: #228B22 !important;
    }

    .text-info {
        color: #20B2AA !important;
    }

    .text-warning {
        color: #4682B4 !important;
    }

    @@media (max-width: 768px) {
        .form-container {
            margin: 20px;
            border-radius: 15px;
        }

        .form-header h1 {
            font-size: 2rem;
        }

        .sport-icons {
            gap: 15px;
        }

        .sport-icon {
            width: 40px;
            height: 40px;
            font-size: 1.2rem;
        }
    }
</style>

<div class="hero-section">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-8 col-md-10">
                <div class="form-container p-4 p-md-5">
                    <div class="form-header">
                        <h1><i class="fas fa-calendar-check me-3"></i>Reservar Cancha</h1>
                        <p>Encuentra y reserva tu cancha deportiva favorita</p>
                        <div class="sport-icons">
                            <div class="sport-icon">
                                <i class="fas fa-futbol"></i>
                            </div>
                            <div class="sport-icon">
                                <i class="fas fa-basketball-ball"></i>
                            </div>
                            <div class="sport-icon">
                                <i class="fas fa-table-tennis"></i>
                            </div>
                            <div class="sport-icon">
                                <i class="fas fa-volleyball-ball"></i>
                            </div>
                        </div>
                    </div>

                    <form asp-action="Create">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger d-none"></div>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="IdCliente" class="form-label">
                                        <i class="fas fa-user text-primary"></i>
                                        Cliente
                                    </label>
                                    @if (User.IsInRole("Cliente"))
                                    {
                                        <input asp-for="IdCliente" value="@ViewBag.ClienteActual" type="hidden" />
                                        <input value="@User.FindFirst("NombreCompleto")?.Value" class="form-control" readonly />
                                    }
                                    else
                                    {
                                        <select asp-for="IdCliente" class="form-select" asp-items="ViewBag.IdCliente">
                                            <option value="">🏃‍♂️ Seleccione Cliente</option>
                                        </select>
                                    }
                                </div>
                            </div>

                            <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="IdCancha" class="form-label">
                                        <i class="fas fa-map-marker-alt text-success"></i>
                                        Cancha Deportiva
                                    </label>
                                    <select asp-for="IdCancha" class="form-select" asp-items="ViewBag.IdCancha">
                                        <option value="">⚽ Seleccione Cancha</option>
                                    </select>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="FechaHoraInicio" class="form-label">
                                        <i class="fas fa-play-circle text-info"></i>
                                        Fecha y Hora de Inicio
                                    </label>
                                    <div class="input-group">
                                        <span class="input-group-text">
                                            <i class="fas fa-calendar-alt"></i>
                                        </span>
                                        <input asp-for="FechaHoraInicio" type="datetime-local" class="form-control" />
                                    </div>
                                    <span asp-validation-for="FechaHoraInicio" class="text-danger"></span>
                                </div>
                            </div>

                            <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="FechaHoraFin" class="form-label">
                                        <i class="fas fa-stop-circle text-warning"></i>
                                        Fecha y Hora de Fin
                                    </label>
                                    <div class="input-group">
                                        <span class="input-group-text">
                                            <i class="fas fa-calendar-alt"></i>
                                        </span>
                                        <input asp-for="FechaHoraFin" type="datetime-local" class="form-control" />
                                    </div>
                                    <span asp-validation-for="FechaHoraFin" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="IdEstadoReserva" class="form-label">
                                        <i class="fas fa-check-circle text-success"></i>
                                        Estado de la Reserva
                                    </label>
                                    @if (User.IsInRole("Cliente"))
                                    {
                                        <input asp-for="IdEstadoReserva" class="form-control" type="hidden" />
                                        <input value="Pre-reservado" class="form-control" readonly />
                                    }
                                    else
                                    {
                                        <select asp-for="IdEstadoReserva" class="form-select" asp-items="ViewBag.IdEstadoReserva">
                                            <option value="">📋 Seleccione Estado</option>
                                        </select>
                                    }
                                </div>
                            </div>

                            <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="Valor" class="form-label">
                                        <i class="fas fa-dollar-sign text-success"></i>
                                        Valor de la Reserva
                                    </label>
                                    @if (User.IsInRole("Cliente"))
                                    {
                                        <input asp-for="Valor" class="form-control" type="hidden" />
                                        <input value="(Se calculará automáticamente)" class="form-control" readonly />
                                    }
                                    else
                                    {
                                        <div class="input-group">
                                            <span class="input-group-text">
                                                <i class="fas fa-money-bill-wave"></i>
                                            </span>
                                            <input asp-for="Valor" type="number" step="0.01" class="form-control" placeholder="0.00" />
                                        </div>
                                    }
                                    <span asp-validation-for="Valor" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="d-flex justify-content-between align-items-center mt-4">
                            <a asp-action="Index" class="btn btn-outline-secondary">
                                <i class="fas fa-arrow-left me-2"></i>
                                Volver al Listado
                            </a>

                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-save me-2"></i>
                                Crear Reserva
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}