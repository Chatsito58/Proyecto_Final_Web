@model Proyecto_Final_Web.Models.Reserva
@{
    ViewData["Title"] = "Create";
}


<div class="hero-section">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-8 col-md-10">
                <div class="form-container p-4 p-md-5">
                    <div class="form-header">
                        <h1><i class="fas fa-calendar-check me-3"></i>Reservar Cancha</h1>
                        <p>Encuentra y reserva tu cancha deportiva favorita</p>
                        <div class="sport-icons">
                            <div class="sport-icon">
                                <i class="fas fa-futbol"></i>
                            </div>
                            <div class="sport-icon">
                                <i class="fas fa-basketball-ball"></i>
                            </div>
                            <div class="sport-icon">
                                <i class="fas fa-table-tennis"></i>
                            </div>
                            <div class="sport-icon">
                                <i class="fas fa-volleyball-ball"></i>
                            </div>
                        </div>
                    </div>

                    <form asp-action="Create">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger d-none"></div>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="IdCliente" class="form-label">
                                        <i class="fas fa-user text-primary"></i>
                                        Cliente
                                    </label>
                                    <select asp-for="IdCliente" class="form-select" asp-items="ViewBag.IdCliente">
                                        <option value="">🏃‍♂️ Seleccione Cliente</option>
                                    </select>
                                </div>
                            </div>

                            <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="IdCancha" class="form-label">
                                        <i class="fas fa-map-marker-alt text-success"></i>
                                        Cancha Deportiva
                                    </label>
                                    <select asp-for="IdCancha" class="form-select" asp-items="ViewBag.IdCancha">
                                        <option value="">⚽ Seleccione Cancha</option>
                                    </select>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="FechaHoraInicio" class="form-label">
                                        <i class="fas fa-play-circle text-info"></i>
                                        Fecha y Hora de Inicio
                                    </label>
                                    <div class="input-group">
                                        <span class="input-group-text">
                                            <i class="fas fa-calendar-alt"></i>
                                        </span>
                                        <input asp-for="FechaHoraInicio" type="datetime-local" class="form-control" />
                                    </div>
                                    <span asp-validation-for="FechaHoraInicio" class="text-danger"></span>
                                </div>
                            </div>

                            <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="FechaHoraFin" class="form-label">
                                        <i class="fas fa-stop-circle text-warning"></i>
                                        Fecha y Hora de Fin
                                    </label>
                                    <div class="input-group">
                                        <span class="input-group-text">
                                            <i class="fas fa-calendar-alt"></i>
                                        </span>
                                        <input asp-for="FechaHoraFin" type="datetime-local" class="form-control" />
                                    </div>
                                    <span asp-validation-for="FechaHoraFin" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="IdEstadoReserva" class="form-label">
                                        <i class="fas fa-check-circle text-success"></i>
                                        Estado de la Reserva
                                    </label>
                                    <select asp-for="IdEstadoReserva" class="form-select" asp-items="ViewBag.IdEstadoReserva">
                                        <option value="">📋 Seleccione Estado</option>
                                    </select>
                                </div>
                            </div>

                            <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="Valor" class="form-label">
                                        <i class="fas fa-dollar-sign text-success"></i>
                                        Valor de la Reserva
                                    </label>
                                    <div class="input-group">
                                        <span class="input-group-text">
                                            <i class="fas fa-money-bill-wave"></i>
                                        </span>
                                        <input asp-for="Valor" type="number" step="0.01" class="form-control" placeholder="0.00" />
                                    </div>
                                    <span asp-validation-for="Valor" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="d-flex justify-content-between align-items-center mt-4">
                            <a asp-action="Index" class="btn btn-outline-secondary">
                                <i class="fas fa-arrow-left me-2"></i>
                                Volver al Listado
                            </a>

                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-save me-2"></i>
                                Crear Reserva
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}