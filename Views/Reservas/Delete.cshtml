@model Proyecto_Final_Web.Models.Reserva

@{
    ViewData["Title"] = "Delete";
}



<div class="delete-section">
    <div class="container-fluid">
        <div class="row justify-content-center">
            <div class="col-12">
                <div class="form-container">
                    <div class="form-header">
                        <div class="delete-icon-container">
                            <div class="delete-icon">
                                <i class="fas fa-trash-alt"></i>
                            </div>
                        </div>
                        <h1><i class="fas fa-exclamation-triangle me-3"></i>Eliminar Reserva</h1>
                        <h4>Confirma la eliminación de esta reserva permanentemente</h4>
                    </div>

                    <h3 class="confirmation-message">
                        <i class="fas fa-question-circle"></i> ¿Estás seguro de que quieres eliminar esto?
                    </h3>

                    <div class="details-container">
                        <h4>Detalles de la Reserva</h4>
                        <hr />
                        <div class="row">
                            <div class="col-md-6">
                                <div class="details-group">
                                    <dt data-label="FechaHoraInicio">
                                        @Html.DisplayNameFor(model => model.FechaHoraInicio)
                                    </dt>
                                    <dd>
                                        @Html.DisplayFor(model => model.FechaHoraInicio)
                                    </dd>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="details-group">
                                    <dt data-label="FechaHoraFin">
                                        @Html.DisplayNameFor(model => model.FechaHoraFin)
                                    </dt>
                                    <dd>
                                        @Html.DisplayFor(model => model.FechaHoraFin)
                                    </dd>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="details-group">
                                    <dt data-label="FechaCreacion">
                                        @Html.DisplayNameFor(model => model.FechaCreacion)
                                    </dt>
                                    <dd>
                                        @Html.DisplayFor(model => model.FechaCreacion)
                                    </dd>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="details-group">
                                    <dt data-label="Valor">
                                        @Html.DisplayNameFor(model => model.Valor)
                                    </dt>
                                    <dd>
                                        @Html.DisplayFor(model => model.Valor)
                                    </dd>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="details-group">
                                    <dt data-label="IdCanchaNavigation">
                                        @Html.DisplayNameFor(model => model.IdCanchaNavigation)
                                    </dt>
                                    <dd>
                                        @Html.DisplayFor(model => model.IdCanchaNavigation.IdCancha)
                                    </dd>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="details-group">
                                    <dt data-label="IdClienteNavigation">
                                        @Html.DisplayNameFor(model => model.IdClienteNavigation)
                                    </dt>
                                    <dd>
                                        @Html.DisplayFor(model => model.IdClienteNavigation.IdUsuario)
                                    </dd>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="details-group">
                                    <dt data-label="IdEstadoReservaNavigation">
                                        @Html.DisplayNameFor(model => model.IdEstadoReservaNavigation)
                                    </dt>
                                    <dd>
                                        @Html.DisplayFor(model => model.IdEstadoReservaNavigation.IdEstadoReserva)
                                    </dd>
                                </div>
                            </div>
                        </div>
                    </div>

                    <form asp-action="Delete">
                        <input type="hidden" asp-for="IdReserva" />
                        <div class="action-buttons">
                            <input type="submit" value="Eliminar" class="btn-delete" />
                            <a asp-action="Index" class="back-link">
                                Volver a la Lista
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
