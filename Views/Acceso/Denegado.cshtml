@{
    ViewData["Title"] = "Acceso Denegado";
}

<head>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" xintegrity="sha512-1ycn6IcaQQ40NZMfzGtpNKPzLfw5+TYxLz7J6v9h+L5m4w/uLg0g9b4O1J0zK6P5tC2Lz/j0+R8dI6c0eQ==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>

<style>
    /* Colores y gradientes de la guía de diseño original */
    /* Verde Marino - Color principal: #2E8B57 */
    /* Azul Acero - Color secundario: #4682B4 */
    /* Verde Agua - Color de acento: #20B2AA */
    /* Verde Bosque - Para hovers y estados activos: #228B22 */

    /* Colores de Soporte: */
    /* Textos principales: #2c5f2d - Verde oscuro */
    /* Gris oscuro para valores: #333 */
    /* Gris medio para textos secundarios: #666 */
    /* Rojo para errores y validaciones: #dc3545 */

    /* Animación de Gradiente (Barra Superior Animada) */
    @@keyframes gradient {
        0% {
            background-position: 0% 50%;
        }

        50% {
            background-position: 100% 50%;
        }

        100% {
            background-position: 0% 50%;
        }
    }

    /* Animación Flotante (Partículas de Fondo) */
    @@keyframes float {
        0%, 100% {
            transform: translateY(0px);
        }

        50% {
            transform: translateY(-10px);
        }
    }

    /* Animación Bounce (Iconos principales) */
    @@keyframes bounce {
        0%, 20%, 50%, 80%, 100% {
            transform: translateY(0);
        }

        40% {
            transform: translateY(-10px);
        }

        60% {
            transform: translateY(-5px);
        }
    }

    body {
        /* El fondo del body ahora se maneja en el layout principal */
        font-family: 'Inter', -apple-system, BlinkMacSystemFont, sans-serif;
        color: #2c5f2d; /* Verde oscuro para textos principales */
        margin: 0;
        padding: 0; /* Padding del body manejado por el layout */
    }

    .restricted-section {
        background: transparent;
        padding: 0;
        position: relative;
        overflow: visible;
        border-radius: 0;
        margin: 0;
    }

    .form-container { /* Usado como contenedor principal para el contenido de la página */
        background: rgba(255, 255, 255, 0.95);
        border-radius: 20px;
        box-shadow: 0 20px 40px rgba(46, 139, 87, 0.15);
        backdrop-filter: blur(10px);
        border: 1px solid rgba(255, 255, 255, 0.2);
        position: relative;
        overflow: hidden;
        max-width: 700px; /* Ancho ajustado para esta página de mensaje */
        margin: 0 auto;
    }

        .form-container::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            height: 4px;
            background: linear-gradient(90deg, #2E8B57, #4682B4, #20B2AA, #228B22);
            background-size: 400% 400%;
            animation: gradient 3s ease infinite;
        }

    .form-header {
        background: linear-gradient(135deg, #dc3545 0%, #bb2d3b 100%); /* Gradiente rojo para acceso denegado */
        color: white;
        padding: 30px;
        margin: -30px -30px 30px -30px;
        border-radius: 20px 20px 0 0;
        text-align: center;
        position: relative;
        overflow: hidden;
    }

        .form-header h1 {
            margin: 0;
            font-size: 2.5rem;
            font-weight: 700;
            text-shadow: 2px 2px 4px rgba(0,0,0,0.3);
            position: relative;
            z-index: 1;
        }

        .form-header p { /* Usado para subtítulos */
            margin: 10px 0 0 0;
            opacity: 0.9;
            font-size: 1.1rem;
            font-weight: 400;
            position: relative;
            z-index: 1;
        }

    .icon-container {
        margin: 20px 0;
        position: relative;
        z-index: 1;
    }

    .main-icon {
        width: 50px;
        height: 50px;
        border-radius: 50%;
        background: rgba(255, 255, 255, 0.2);
        display: inline-flex;
        align-items: center;
        justify-content: center;
        font-size: 1.5rem;
        animation: bounce 2s infinite;
        color: white;
    }

    .content-message {
        padding: 30px;
        text-align: center;
    }

        .content-message h1 { /* Para el "Acceso Restringido" */
            font-size: 2.2rem;
            font-weight: 700;
            color: #dc3545; /* Rojo para el título de restricción */
            margin-bottom: 20px;
            display: flex;
            align-items: center;
            justify-content: center;
            gap: 15px;
        }

            .content-message h1 i {
                font-size: 2.5rem;
            }

        .content-message p {
            font-size: 1.1rem;
            color: #666; /* Gris medio para el texto descriptivo */
            line-height: 1.6;
            margin-bottom: 30px;
        }

    .action-buttons {
        display: flex;
        gap: 20px;
        justify-content: center;
        flex-wrap: wrap;
        margin-top: 30px;
        padding: 30px;
        border-top: 1px solid rgba(255, 255, 255, 0.2);
        background: rgba(255, 255, 255, 0.95);
        backdrop-filter: blur(10px);
    }

    .back-link { /* Reutilizando el estilo back-link para "Volver al Inicio" */
        display: inline-flex;
        align-items: center;
        justify-content: center;
        gap: 10px;
        color: #4682B4;
        text-decoration: none;
        font-weight: 600;
        padding: 15px 40px; /* Padding ajustado para ser un botón principal */
        border: 2px solid #4682B4;
        border-radius: 12px;
        transition: all 0.3s ease;
        background: transparent;
        min-width: 200px;
        text-transform: uppercase; /* Hacerlo mayúsculas como los otros botones */
        letter-spacing: 1px;
        font-size: 1.1rem;
    }

        .back-link:hover {
            background: #4682B4;
            color: white;
            transform: translateY(-2px);
            text-decoration: none;
            box-shadow: 0 5px 15px rgba(70, 130, 180, 0.3);
        }

        .back-link::before {
            content: '\f015'; /* fa-home para volver al inicio */
            font-family: 'Font Awesome 5 Free';
            font-weight: 900;
            transition: transform 0.3s ease;
            margin-right: 5px;
        }

        .back-link:hover::before {
            transform: translateX(-3px);
        }

    /* Responsive Design */
    @@media (max-width: 768px) {
        .form-container {
            margin: 20px;
            border-radius: 15px;
            padding: 20px !important;
        }

        .form-header h1 {
            font-size: 2rem;
        }

        .content-message h1 {
            font-size: 1.8rem;
            flex-direction: column; /* Icono arriba del texto en móvil */
            gap: 10px;
        }

            .content-message h1 i {
                font-size: 2rem;
            }

        .content-message p {
            font-size: 1rem;
        }

        .action-buttons {
            flex-direction: column;
            align-items: center;
            padding: 20px;
        }

        .back-link {
            width: 100%;
            max-width: 300px;
        }
    }

    @@media (max-width: 480px) {
        .form-header h1 {
            font-size: 1.6rem;
        }
    }

    /* Animaciones de carga */
    .form-container {
        animation: slideIn 0.6s cubic-bezier(0.4, 0, 0.2, 1);
    }

    @@keyframes slideIn {
        0% {
            opacity: 0;
            transform: translateY(30px);
        }

        100% {
            opacity: 1;
            transform: translateY(0);
        }
    }
</style>

<div class="restricted-section">
    <div class="container-fluid">
        <div class="row justify-content-center">
            <div class="col-12">
                <div class="form-container">
                    <div class="form-header">
                        <div class="icon-container">
                            <div class="main-icon">
                                <i class="fas fa-ban"></i> <!-- Icono de prohibido -->
                            </div>
                        </div>
                        <h1><i class="fas fa-lock me-3"></i>Acceso Denegado</h1>
                        <h4>No tienes los permisos necesarios para ver esta página</h4>
                    </div>

                    <div class="content-message">
                        <h1><i class="fas fa-exclamation-circle"></i> Acceso Restringido</h1>
                        <p class="lead">
                            Lo sentimos, no tienes los permisos necesarios para acceder a esta página.
                            Si crees que esto es un error, por favor, contacta al administrador.
                        </p>
                    </div>

                    <div class="action-buttons">
                        <a asp-area="" asp-controller="Home" asp-action="Index" class="back-link">
                            Volver al Inicio
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        // No hay scripts de validación específicos para esta página
    }
}
