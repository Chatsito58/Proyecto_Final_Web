@{
    ViewData["Title"] = "Acceso Denegado";
}



<div class="restricted-section">
    <div class="container-fluid">
        <div class="row justify-content-center">
            <div class="col-12">
                <div class="form-container">
                    <div class="form-header">
                        <div class="icon-container">
                            <div class="main-icon">
                                <i class="fas fa-ban"></i> <!-- Icono de prohibido -->
                            </div>
                        </div>
                        <h1><i class="fas fa-lock me-3"></i>Acceso Denegado</h1>
                        <h4>No tienes los permisos necesarios para ver esta página</h4>
                    </div>

                    <div class="content-message">
                        <h1><i class="fas fa-exclamation-circle"></i> Acceso Restringido</h1>
                        <p class="lead">
                            Lo sentimos, no tienes los permisos necesarios para acceder a esta página.
                            Si crees que esto es un error, por favor, contacta al administrador.
                        </p>
                    </div>

                    <div class="action-buttons">
                        <a asp-area="" asp-controller="Home" asp-action="Index" class="back-link">
                            Volver al Inicio
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        // No hay scripts de validación específicos para esta página
    }
}
